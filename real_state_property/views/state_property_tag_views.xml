<?xml version="1.0"?>

<odoo>
    <record id="state_property_tag_tree_view" model="ir.ui.view">
        <field name="name">state.property.tag.tree.view</field>
        <field name="model">state.property.tag</field>
        <field name="arch" type="xml">
            <tree string="Property Tags">
                <field name="name"/>
            </tree>
        </field>
    </record>
    <!-- Form View -->
    <record id="state_property_tag_form_view" model="ir.ui.view">
        <field name="name">state.property.tag.form</field>
        <field name="model">state.property.tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>
                        <field class="text-break" options="{'line_breaks': False}" widget="text" name="name" placeholder="e.g. Property's Tag"/>
                    </h1>
                </sheet>
            </form>
        </field>
    </record>
</odoo>