<?xml version="1.0"?>

<odoo>
    <record id="real_state_form" model="ir.ui.view">
        <field name="name">real.state.form</field>
        <field name="model">state.property</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_sold_state" type="object" class="oe_highlight" string="Sold"/>
                    <button name="action_cancel_state" type="object" string="Cancel"/>
                </header>
                <sheet>
                    <field name="active" invisible="1"/>
                    <h1>
                        <field class="text-break" options="{'line_breaks': False}" widget="text" name="name" placeholder="e.g. Property Title"/>
                    </h1>
                    <group>
                        <group>
                            <field name="tag_ids" widget="many2many_tags"/>
                            <field name="post_code"/>
                            <field name="property_type_id"/>
                            <field name="state" readonly="state == 'sold' or state == 'canceled'"/>
                        </group>
                        <group>
                            <field name="date_availability"/>
                            <field name="selling_price"/>
                            <field name="expected_price"/>
                            <field name="best_price"/>
                            <field name="total_area"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area"/>
                                <field name="garden_orientation"/>
                            </group>
                        </page>
                        <page string="Other Info" name="other_info">
                            <group>
                                <field name="user_ids"/>
                                <field name="partner_ids"/>
                            </group>
                        </page>
                        <page string="Offers" name="offers">
                            <field name="offer_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="real_state_search" model="ir.ui.view">
        <field name="name">real.state.search</field>
        <field name="model">state.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="property_type_id"/>
                <field name="post_code"/>
                <field name="living_area"/>
                <filter string="Available" name="available" domain="[('state', 'in', ['new', 'offer_received'])]"/>
                <filter string="Not Available" name="not_available" domain="[('state', 'not in', ['new', 'offer_received'])]"/>
                <separator/>
                <filter string="Archived" name="archived" domain="[('active', '!=', True)]"/>
                <group string="Group By">
                    <filter string="Postcode" name="postcode" context="{'group_by': 'post_code'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>