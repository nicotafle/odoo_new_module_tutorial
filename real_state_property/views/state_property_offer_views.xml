<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="state_property_offer_tree_view" model="ir.ui.view">
        <field name="name">state.property.offer.tree.view</field>
        <field name="model">state.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Property Offers">
                <field name="price"/>
                <field name="status"/>
                <field name="partner_ids"/>
            </tree>
        </field>
    </record>
    <!-- Form View -->
    <record id="state_property_offer_form_view" model="ir.ui.view">
        <field name="name">state.property.offer.form</field>
        <field name="model">state.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="partner_ids"/>
                        <field name="price"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>